{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Pipeline Config",
    "type": "object",
    "properties": {
        "pipeline": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "step": {
                        "type": "string",
                        "description": "Name of the processing function"
                    },
                    "params": {
                        "type": "object",
                        "description": "Parameters for this step"
                    }
                },
                "required": ["step"]
            }
        }   
    },
    "required": ["pipeline"]
}